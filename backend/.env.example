# Campus Mesh Backend Environment Variables
# Copy this file to .env and configure with your actual values

# Node.js Environment
NODE_ENV=development

# Server Configuration  
PORT=5000

# Firebase Configuration
# Note: Most Firebase config is handled via Firebase CLI and service account keys
# These are for any additional Firebase configuration if needed
FIREBASE_PROJECT_ID=campus-mesh-dev
FIREBASE_DATABASE_URL=https://campus-mesh-dev-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=campus-mesh-dev.appspot.com

# API Keys (if external APIs are used)
# Uncomment and configure if your app integrates with external services
# THIRD_PARTY_API_KEY=your_api_key_here
# NOTIFICATION_API_KEY=your_notification_service_key

# Security Keys
# JWT_SECRET=your_jwt_secret_key_here
# SESSION_SECRET=your_session_secret_key

# Email Configuration (if email notifications are implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Cloud Storage Configuration (additional to Firebase)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# Database Configuration (if using additional databases alongside Firestore)
# MONGO_URI=mongodb://localhost:27017/campus_mesh
# REDIS_URL=redis://localhost:6379

# External Service URLs
# For connecting to other microservices or APIs
# API_BASE_URL=http://localhost:3000/api
# WEBHOOKS_URL=http://localhost:5000/webhooks

# Feature Flags (can override Firebase Remote Config for local development)
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=15000

# File Upload Limits
MAX_FILE_SIZE_MB=25
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Cors Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200