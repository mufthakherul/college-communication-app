# Supabase Configuration
# Get these values from: https://app.supabase.com/project/YOUR_PROJECT_ID/settings/api

# Your Supabase project URL (e.g., https://abcdefgh.supabase.co)
SUPABASE_URL=YOUR_SUPABASE_PROJECT_URL

# Your Supabase anon/public key
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Optional: Sentry DSN for error tracking
# SENTRY_DSN=

# Optional: OneSignal App ID for push notifications
# ONESIGNAL_APP_ID=

# App Configuration
APP_NAME=RPI Communication
COLLEGE_NAME=Rangpur Polytechnic Institute
COLLEGE_WEBSITE=https://rangpur.polytech.gov.bd

# Security Configuration
# Set to true in production to enable security features
ENABLE_ROOT_DETECTION=false
ENABLE_TAMPERING_DETECTION=false
ENABLE_CERTIFICATE_PINNING=false

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_MESH_NETWORK=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false

# Environment
ENVIRONMENT=development
